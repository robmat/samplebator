<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:background="@color/white">
	<include layout="@layout/tob_bar" />
	<ListView
    	android:layout_weight="0.8"
    	android:id="@+id/categories_list_id"
    	android:layout_width="fill_parent"
  		android:layout_height="fill_parent"/>
	<LinearLayout 
  		android:layout_weight="0.1"
  		android:layout_width="fill_parent"
  		android:layout_height="60dp"
  		android:gravity="center_vertical"
  		android:background="@drawable/search_bar_back">
  		<ImageView
  			android:id="@+id/video_list_about_btn_id"
  			android:src="@drawable/about_btn"
  			android:layout_width="wrap_content"
  			android:layout_height="wrap_content" />
  		<ImageView
  			android:id="@+id/video_list_categories_btn_id"
  			android:src="@drawable/categories_btn"
  			android:layout_width="wrap_content"
  			android:layout_height="wrap_content" />
  		<ImageView
  			android:id="@+id/video_list_feedback_btn_id"
  			android:src="@drawable/feedback_btn"
  			android:layout_width="wrap_content"
  			android:layout_height="wrap_content" />
  	</LinearLayout>
</LinearLayout>
