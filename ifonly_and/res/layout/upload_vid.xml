<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent">
    <include layout="@layout/tob_bar" android:layout_alignParentTop="true" />
    <VideoView 
    	android:layout_centerInParent="true"
		android:id="@+id/preview_vid_view"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content" 
		android:layout_gravity="center" />
	<LinearLayout 
		android:layout_alignParentBottom="true"
		android:layout_width="fill_parent"
		android:layout_height="55dip"
		android:orientation="horizontal">
		<ImageView 
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:scaleType="fitXY"
			android:src="@drawable/upload_vid_about_btn"
			android:id="@+id/upload_vid_about_id"
			android:layout_weight="0.25"/>
		<ImageView 
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:scaleType="fitXY"
			android:src="@drawable/upload_vid_add_note_btn"
			android:id="@+id/upload_vid_add_note_id"
			android:layout_weight="0.25"/>
		<ImageView 
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:scaleType="fitXY"
			android:src="@drawable/upload_vid_add_tags_btn"
			android:id="@+id/upload_vid_add_tags_id"
			android:layout_weight="0.25"/>
		<ImageView 
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:scaleType="fitXY"
			android:src="@drawable/upload_vid_submit_btn"
			android:id="@+id/upload_vid_submit_id"
			android:layout_weight="0.25"/>
	</LinearLayout>
	<ImageView
		android:id="@+id/upload_progress"
		android:src="@drawable/activity_indicator"
		android:visibility="invisible"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentRight="true"
		android:layout_alignParentBottom="true"
		android:layout_marginRight="20dip"
		android:layout_marginLeft="10dip"/>
</RelativeLayout>
